<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
    <name>System - STOMT</name>
    <author>STOMT.com</author>
    <creationDate>FEB 2018</creationDate>
    <copyright>Copyright (C) 2015 stomt.com</copyright>
    <license>GNU/GPLv2 http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>contact@stomt.com</authorEmail>
    <authorUrl>stomt.com</authorUrl>
    <version>2.0.0</version>
    <releaseDate>2018-02-16</releaseDate>
    <description>
         STOMT makes it easy for anyone to provide instant feedback. This plugin allows you to customize the STOMT feedback button and add it to your wordpress site.

        Installation is simple and only takes seconds.
    </description>

    <files>
            <filename plugin="Stomt">Stomt.php</filename>
            <filename>index.html</filename>
    </files>

    <languages>
            <language tag="en-GB">en-GB.plg_system_Stomt.ini</language>
            <language tag="en-GB">de-DE.plg_system_Stomt.ini</language>
    </languages>

    <config>
        <fields name="params">

              

                <fieldset name="Basic">
                

                <field name="stomt_id" 
                    type="text" default="" 
                    label="STOMT_ID" 
                    description="STOMT_ID_DESC" />

                <field name="stomt_label" 
                    type="text" default="Feedback" 
                    label="label" 
                    description="label" />


                    

                    <field name="position" 
                    type="radio"
                    class="btn-group" 
                    default="right"
                    label="POSITION" 
                    description="POSITION_DESC">
                        <option value="right">Right</option>
                        <option value="left">left</option>
                    </field>



                    <field name="color_text" 
                    type="color" 
                    label="COLOR" 
                    default="#FFFFFF"
                    description="COLOR_DESC" />

                    <field name="color_background" 
                    type="color" 
                    label="COLOR_BACKGROUND" 
                    default="#0091C9"
                    description="COLOR_BACK_DESC" />

                    <field name="color_hover" 
                    type="color" 
                    label="COLOR_HOVER" 
                    default="#04729E"
                    description="COLOR_HOVER_DESC" />


                

                    <field name="showclose" 
                    type="radio"
                    class="btn-group" 
                    default="true"
                    label="SHOWCLOSE" 
                    description="SHOWCLOSE_DESC">
                        <option value="true">Enable</option>
                        <option value="false">Disable</option>
                    </field>

                    <field name="preload" 
                    type="radio"
                    class="btn-group" 
                    default="1"
                    label="PRELOAD" 
                    description="PRELOAD_DESC">
                        <option value="1">Enable</option>
                        <option value="0">Disable</option>
                    </field>
                    
            </fieldset>
        </fields>
    </config>

  
</extension>
